@model MyStore.Domain.Concrete.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"><h2>编辑分类</h2></div>

