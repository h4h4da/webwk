@model IEnumerable<MyStore.Domain.Concrete.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">

    <div class="panel-heading"> <h3> 分类列表</h3></div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">编号 </th>
                <th>名称</th>
                <th></th>
                <th class="text-right"></th>
                <th> </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Id</td>
                    <td>@Html.ActionLink(item.Name, "CategoryEdit", new { item.Id })</td>
                    <td>....</td>
                    <td class="text-right"> xx</td>
                    <td class="text-center">
                        @using (Html.BeginForm("CategoryDelete", "Admin"))
                        {
                            @Html.Hidden("Id", item.Id)
                            <input type="submit" class="btn btn-default btn-xs" value="删除" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("新增", "CategoryCreate", null, new { @class = "btn btn-default" })
    </div>
</div>