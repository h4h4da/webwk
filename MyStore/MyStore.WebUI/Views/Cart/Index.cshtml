@model MyStore.WebUI.Models.CartIndexViewModel
<style>
    #cartTable td { vertical-align:middle}

</style>

<h2> 购物车</h2>

<table id="cartTable" class="table">
    <thead>
        <tr><th>产品</th>  <th>数量</th>  <th>金额</th><th></th></tr>
    </thead>

    <tbody>

       
        @foreach (var cartLine in Model.Cart.Line)
        {
            <tr>

                <td>@cartLine.Product.Name</td>
                <td>@cartLine.Quantity</td>
                <td>@cartLine.Product.Price.ToString("c")</td>
                <td>@((cartLine.Product.Price).ToString("c"))</td>
                <td>
                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                    {
                        @Html.Hidden("Id", cartLine.Product.Id)
                        @Html.HiddenFor(x => x.ReturnUrl)
                        <input class="btn btn-sm btn-warning" type="submit" value="删除"/>
                    }
                </td>
            </tr>
        }


    </tbody>

</table>